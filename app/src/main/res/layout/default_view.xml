<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/default_page_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_default_lcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/no_network_icon" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/network_error"
        android:textColor="@color/gray_898989"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_load"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_default_btn"
        android:gravity="center"
        android:text="@string/network_error_btn"
        android:textColor="@color/black_414141"
        android:textSize="20dp" />

</LinearLayout>
